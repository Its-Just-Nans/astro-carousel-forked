---
import Layout from "../layouts/Layout.astro";
import { Carousel, Photo } from "~";
import type { ComponentProps } from "astro/types";

const images: ComponentProps<typeof Carousel>["images"] = [
  {
    src: "https://a.storyblok.com/f/95455/1350x1080/3ef7748922/p5240368.jpg",
    alt: "",
    formats: ["avif", "webp"],
    width: 1350,
    height: 1080,
    widths: [450, 675, 1350],
  },
  {
    src: "https://a.storyblok.com/f/95455/1350x1080/231d2407ea/p4030184.jpg",
    alt: "",
    formats: ["avif", "webp"],
    width: 1350,
    height: 1080,
    widths: [200, 450, 675, 1350],
  },
  {
    src: "https://a.storyblok.com/f/95455/1350x1080/4aee2a00f4/p5240221.jpg",
    alt: "",
    formats: ["avif", "webp"],
    width: 1350,
    height: 1080,
    widths: [200, 450, 675, 1350],
  },
  {
    src: "https://a.storyblok.com/f/186233/1280x1920/9563a35d39/20230714-4.jpg",
    alt: "",
    formats: ["avif", "webp"],
    width: 1280,
    height: 1920,
    widths: [200, 450, 675, 1350],
  },
];
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="entry">
      <Carousel images={images} />
      <ul
        class="entry__entries"
        id="carouselTargetList"
      >
        {
          images.map((img, i) => {
            return (
              <li class="entry__elem">
                <a
                  href={`./?image=${i}`}
                  data-carousel-index={i}
                  class="entry__link"
                >
                  <Photo {...img} widths={[200, 400]}/>
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </main>
</Layout>

<style lang="scss">
  .entry {
    &__entries {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      justify-content: center;
      align-items: center;
      gap: 8px;
      margin: 0;
      padding: 0;
      list-style: none;
    }

    &__elem {
      &:hover {
        cursor: pointer;
      }
    }

    &__img {
      object-fit: contain;
      object-position: center;
      width: 100%;
      min-height: 100%;
    }

    &__link {
      display: block;
    }
  }
</style>
